<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookbook.MobileApp.Views.Posjetilac.DodajKomentar"
             Title="Dodaj komentar">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  HorizontalOptions="FillAndExpand" Padding="30" VerticalOptions="CenterAndExpand">

                <Label Text="Sadržaj"></Label>
                <Entry  x:Name="Sadrzaj" Text="{ Binding Sadrzaj}"></Entry>

                <Button Clicked="Button_Clicked"  HorizontalOptions="FillAndExpand" Text="Sačuvaj" TextColor="White" BackgroundColor="Blue"></Button>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>